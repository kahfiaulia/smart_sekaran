<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.smartcity.MainMenu">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnDataPenduduk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Data Penduduk" />

        <Button
            android:id="@+id/btnTambahDataPenduduk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tambah Data Penduduk" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <Button
            android:id="@+id/btnBerita"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Berita Desa" />

        <Button
            android:id="@+id/btnTambahBerita"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tambah Berita Desa" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <Button
            android:id="@+id/btnLaporan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Laporan Keluhan" />

        <Button
            android:id="@+id/btnTambahLaporan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tambah Laporan Keluhan" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>